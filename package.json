{
    "name": "event-sidecar",
    "description": "Event Sidecar is used to route and events to Kafka",
    "version": "7.4.0",
    "author": "Modusbox",
    "contributors": [
        "Rajiv Mothilal <rajiv.mothilal@modusbox.com>",
        "Valentin Genev <valentin.genev@modusbox.com>",
        "Miguel de Barros <miguel.debarros@modusbox.com"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/mojaloop/event-sidecar.git"
    },
    "bugs": "http://github.com/mojaloop/event-sidecar/issues",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "ava": {
        "files": [
            "test/unit/**/**.test.js"
        ],
        "sources": [
            "src/**/*.js"
        ]
    },
    "dependencies": {
        "@hapi/boom": "7.4.2",
        "@hapi/good": "8.2.0",
        "@hapi/hapi": "18.3.1",
        "@hapi/inert": "5.2.1",
        "@hapi/vision": "5.5.2",
        "@mojaloop/central-services-metrics": "5.2.0",
        "@mojaloop/central-services-shared": "7.2.0",
        "@mojaloop/central-services-stream": "6.2.2",
        "@mojaloop/event-sdk": "7.4.0",
        "blipp": "4.0.0",
        "glob": "7.1.4",
        "hapi-openapi": "1.2.2",
        "hapi-swagger": "10.0.2",
        "mustache": "3.0.1",
        "uuid4": "1.1.4"
    },
    "devDependencies": {
        "ava": "2.2.0",
        "eslint": "6.1.0",
        "get-port": "5.0.0",
        "nyc": "14.1.1",
        "proxyquire": "2.1.1",
        "rewire": "4.0.1",
        "sinon": "7.3.2",
        "standard": "13.1.0",
        "swagmock": "1.0.0"
    },
    "scripts": {
        "start": "node src/index.js server --api",
        "test": "npx ava test/unit/**/*.test.js",
        "cover": "npx nyc --all report --reporter=lcov npm run test",
        "test:coverage": "nyc ava",
        "lint": "eslint .",
        "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.json'"
    },
    "generator-swaggerize": {
        "version": "4.1.0"
    },
    "main": "./server"
}
