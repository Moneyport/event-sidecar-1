{
    "name": "event-sidecar",
    "description": "Event Sidecar is used to route an event to Kafka",
    "version": "9.2.0",
    "author": "ModusBox",
    "contributors": [
        "Rajiv Mothilal <rajiv.mothilal@modusbox.com>",
        "Valentin Genev <valentin.genev@modusbox.com>",
        "Miguel de Barros <miguel.debarros@modusbox.com"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/mojaloop/event-sidecar.git"
    },
    "bugs": "http://github.com/mojaloop/event-sidecar/issues",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "ava": {
        "files": [
            "test/unit/**/**.test.js"
        ],
        "ignoredByWatcher": [
            "test/unit/**/**.test.js"
        ]
    },
    "dependencies": {
        "@hapi/address": "4.0.0",
        "@hapi/boom": "9.0.0",
        "@hapi/good": "9.0.0",
        "@hapi/hapi": "19.1.1",
        "@hapi/inert": "6.0.1",
        "@hapi/vision": "6.0.0",
        "@mojaloop/central-services-logger": "9.1.0",
        "@mojaloop/central-services-metrics": "9.1.0",
        "@mojaloop/central-services-stream": "9.1.0",
        "@mojaloop/event-sdk": "8.7.0",
        "blipp": "4.0.1",
        "glob": "7.1.6",
        "hapi-openapi": "1.2.6",
        "hapi-swagger": "12.1.0",
        "mustache": "4.0.0",
        "uuid4": "1.1.4"
    },
    "devDependencies": {
        "ava": "3.3.0",
        "get-port": "5.1.1",
        "npm-audit-resolver": "2.2.0",
        "npm-check-updates": "4.0.1",
        "nyc": "15.0.0",
        "proxyquire": "2.1.3",
        "rewire": "4.0.1",
        "sinon": "8.1.1",
        "standard": "14.3.1",
        "swagmock": "1.0.0"
    },
    "pre-commit": [
        "dep:check",
        "standard",
        "test"
    ],
    "scripts": {
        "start": "node src/index.js server --api",
        "test": "ava",
        "test:coverage": "nyc ava",
        "standard": "standard",
        "pre-commit": "1.2.2",
        "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.json'",
        "dep:check": "npx ncu -e 2",
        "dep:update": "npx ncu -u",
        "audit:resolve": "SHELL=sh resolve-audit",
        "audit:check": "SHELL=sh check-audit"
    },
    "generator-swaggerize": {
        "version": "4.1.0"
    },
    "main": "./src/server"
}
